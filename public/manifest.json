{
  "name": "Abraham Ukachi",
  "short_name": "abraham-ukachi",
  "description": "The official web app - portfolio + AI assistant - of Abraham Ukachi built using Next.js and initially deployed on Vercel.",
  "id": "/?homescreen=1",
  "start_url": "/?homescreen=1",
  "display": "standalone",
  "display_override": [ "fullscreen", "minimal-ui"],
  "display-override": [ "fullscreen", "minimal-ui"],
  "theme_color": "#A67C52",
  "background_color": "#A67C52",
  "orientation": "portrait-primary",

  "protocol_handlers": [
    {
      "protocol": "web+projects",
      "url": "/projects/%s"
    },
    {
      "protocol": "web+apps",
      "url": "/apps/%s"
    },
    {
      "protocol": "web+skills",
      "url": "/skills/%s"
    },
    {
      "protocol": "web+experience",
      "url": "/experience/%s"
    },
    {
      "protocol": "web+archives",
      "url": "/archives/%s"
    },
    {
      "protocol": "web+assistant",
      "url": "/assistant/%s"
    }

  ],

  "icons": [
    {
        "src": "assets/images/manifest/squircle/icon-48x48.png",
        "sizes": "48x48",
        "type": "image/png"
    },
    {
      "src": "assets/images/manifest/squircle/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png"
    },
    {

      "src": "assets/images/manifest/squircle/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {

      "src": "assets/images/manifest/squircle/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "assets/images/manifest/squircle/icon-192x192.png",
